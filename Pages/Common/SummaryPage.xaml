<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ElectoralMonitoring.SummaryPage"
             x:DataType="local:SummaryPageModel"
             xmlns:res="clr-namespace:ElectoralMonitoring.Resources.Lang"
             xmlns:local="clr-namespace:ElectoralMonitoring"
             Title="SummaryPage" Shell.NavBarIsVisible="False" BackgroundColor="{Binding Color}">
    <VerticalStackLayout VerticalOptions="CenterAndExpand" Spacing="20">
        <Label Style="{StaticResource LabelIcon}" Text="{Binding Icon}" FontSize="60"/>
        <Label Text="{Binding Message}" Margin="0,30,0,0" HorizontalOptions="Center" HorizontalTextAlignment="Center" FontSize="18"/>
        <StackLayout BindableLayout.ItemsSource="{Binding Actions}" Padding="20" Spacing="10">
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="local:ActionButtonDTO">
                    <Button Text="{Binding Text}" Command="{Binding ActionCommand}" HorizontalOptions="Center" WidthRequest="300"/>

                </DataTemplate>

            </BindableLayout.ItemTemplate>

        </StackLayout>
    </VerticalStackLayout>
</ContentPage>
