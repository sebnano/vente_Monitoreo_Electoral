<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ElectoralMonitoring.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ElectoralMonitoring"
    Shell.FlyoutBehavior="Disabled"
    xmlns:res="clr-namespace:ElectoralMonitoring.Resources.Lang">
    <TabBar>
        <ShellContent
            Title="{x:Static res:AppRes.MonitorListPageTitle}"
            ContentTemplate="{DataTemplate local:MonitorListPage}"
            Route="MonitorListPageModel">
            <ShellContent.Icon>
                <FontImageSource Color="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray200}}" FontFamily="AppIcons" Glyph="&#xf103;"/>
            </ShellContent.Icon>
        </ShellContent>
    </TabBar>
</Shell>

